datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(cuid())
  email String @unique
  role  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password Password?
}

model Post {
  id    String @id @default(cuid())
  title String 
  slug String @unique
  content String
  date DateTime
  category  String
  image String
}

model Project {
  id  String @id @default(cuid())
  title String
  slug String
  content String
  date DateTime
  image String
  type String
  link String
  photos Photo[]
}

model Photo {
  id String @id @default(cuid())
  image String
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  projectId String 

}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}
